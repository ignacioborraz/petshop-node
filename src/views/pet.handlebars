<main class="align-items-center">
	<h1>{{mainTitle}}</h1>
	{{#if pet}}
	<div class="d-flex justify-content-evenly flex-wrap mb-3">
		<div class="card mb-2 ms-1 me-1" style="width: 50%;">
			<img src="/public/img/logo.jpg" class="card-img-top" alt={{pet.id}}>
			<div class="card-body">
				<h5 class="card-title">{{pet.name}}</h5>
				<p class="card-text">{{pet.tag}}</p>
			</div>
		</div>
	</div>
	{{else}}
	<h5 class="card-title">NOT FOUND PET</h5>
	{{/if}}
</main>